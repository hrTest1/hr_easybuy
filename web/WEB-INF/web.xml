<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>EbNewsController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbNewsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EbNewsController</servlet-name>
        <url-pattern>/news.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EbNoticeController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbNoticeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EbNoticeController</servlet-name>
        <url-pattern>/notices.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EbProductController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EbProductController</servlet-name>
        <url-pattern>/EbP.do</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>HPDetailController</servlet-name>
    <servlet-class>sdkd.com.ec.controller.HPDetailController</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>HPDetailController</servlet-name>
        <url-pattern>/Hot.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EbUserRegisterController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbUserRegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EbUserRegisterController</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EbUserLoginController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbUserLoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EbUserLoginController</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EbPCategoryController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbPCategoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EbPCategoryController</servlet-name>
        <url-pattern>/category.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>indexController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.indexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>indexController</servlet-name>
        <url-pattern>/index.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EbShoppingController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbShoppingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EbShoppingController</servlet-name>
        <url-pattern>/shopping.do</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.do</welcome-file>
    </welcome-file-list>

</web-app>